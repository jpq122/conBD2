<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ConBD2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConBD2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView PaneDisplayMode="Left" SelectionChanged="NavigationView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItemHeader Foreground="Black">Affichage</NavigationViewItemHeader>
            <NavigationViewItem x:Name="Aff_Rng" Content="Aléatoire"/>
            <NavigationViewItem x:Name="Aff_Pro" Content="Propriétaire"/>
            <NavigationViewItem x:Name="Aff_Mai" Content="Maison"/>
            <NavigationViewItemSeparator/>
            <NavigationViewItemHeader Foreground="Black">Ajouter</NavigationViewItemHeader>
            <NavigationViewItem x:Name="Add_Pro" Content="Propriétaire"/>
            <NavigationViewItem x:Name="Add_Mai" Content="Maison"/>
        </NavigationView.MenuItems>

        <Frame x:Name="mainFrame"/>
    </NavigationView>
</Window>
